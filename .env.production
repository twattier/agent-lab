# Production Environment Variables for AgentLab
# WARNING: This file contains production configuration templates
# DO NOT commit actual production secrets to version control

# Database Configuration
POSTGRES_DB=agentlab
POSTGRES_USER=agentlab_user
# POSTGRES_PASSWORD should be set via secrets/postgres_password.txt

# Redis Configuration
# REDIS_PASSWORD should be set via secrets/redis_password.txt

# API Configuration
ENV=production
DEBUG=false
LOG_LEVEL=info
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=120
KEEPALIVE=2

# Web Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
# NEXT_PUBLIC_API_URL should be set to your production domain
# NEXTAUTH_URL should be set to your production domain
# NEXTAUTH_SECRET should be set via secrets/nextauth_secret.txt

# Domain Configuration
DOMAIN_NAME=agentlab.yourdomain.com

# Image Tags
IMAGE_TAG=latest

# External API Keys (set via secrets files)
# CLAUDE_API_KEY should be set via secrets/claude_api_key.txt

# SSL Configuration
# SSL certificates should be placed in secrets/ directory

# Monitoring
GRAFANA_PASSWORD_FILE=/run/secrets/grafana_password

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Security Settings
SECURITY_HEADERS=true
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# Performance Settings
GZIP_COMPRESSION=true
CACHE_CONTROL_MAX_AGE=31536000