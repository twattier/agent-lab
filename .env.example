# Required Environment Variables

# Claude API Configuration (Required)
CLAUDE_API_KEY=your_claude_api_key_here

# Optional LLM Provider Configuration
# OpenAI API (Optional - for fallback or testing)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# OLLAMA Configuration (Optional - for local/offline development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agentlab
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/agentlab_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
NODE_ENV=development
API_PORT=8000
WEB_PORT=3000

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=debug

# BMAD Method Configuration
BMAD_DEBUG=true
BMAD_LOG_LOCATION=.ai/debug-log.md

# MCP (Model Context Protocol) Configuration
MCP_ENABLED=true
MCP_SERVER_URL=ws://localhost:8080/mcp
MCP_TIMEOUT=30000